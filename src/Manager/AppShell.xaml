<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Skarnes20.Ado.Manager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Skarnes20.Ado.Manager.Views"
    FlyoutWidth="120" FlyoutBehavior="Locked"
    Title="">

    <FlyoutItem Title="Test Plan" Route="testplan" Style="{StaticResource HomeFlyout}">
        <ShellContent ContentTemplate="{DataTemplate views:TestPlanPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Settings" Route="settings" Style="{StaticResource SettingsFlyout}">
        <ShellContent
            ContentTemplate="{DataTemplate views:SettingsPage}"/>
    </FlyoutItem>

</Shell>
